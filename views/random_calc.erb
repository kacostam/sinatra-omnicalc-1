<form action="/random/results">

<div>
  <label for="min_random_num">Minimum</label>
  <input id="min_random_num" name="user_min" type="text" placeholder="E.g. 1.5">
</div>

<div>
  <label for="max_random_num">Maximum</label>
  <input id="max_random_num" name="user_max" type="text" placeholder="E.g. 4.5">
</div>

<div>
  <button>
    Pick random number
  </button>
</div>
</form>
