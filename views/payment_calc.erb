<form action="/payment/results">

<div>
  <label for="user_apr">APR</label>
  <input id="user_apr" name="user_apr" type="text" placeholder="E.g. 5.42">
</div>

<div>
  <label for="user_years">Number of years</label>
  <input id="user_years" name="user_years" type="text" placeholder="How many years to repay?">
</div>

<div>
  <label for="user_pv">Principal</label>
  <input id="user_pv" name="user_pv" type="text" placeholder="How much principal?">
</div>

<div>
  <button>
    Calculate monthly payment
  </button>
</div>
</form>
